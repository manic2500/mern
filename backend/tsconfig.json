{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "@common/*": [
                "../common/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "lib": [
        "es2015"
    ],
    "references": [
        {
            "path": "../common"
        }
    ]
}